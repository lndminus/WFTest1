
<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="@ViewBag.AdminLogin" name="login" />
    <input type="hidden" value="@ViewBag.PostId" name="postid" />
    <div class="container body-content">
        <footer>
            <h1>WorkFinder</h1>
        </footer>
        <footer>
            <h2>@ViewBag.AdPost.PostName</h2>
        </footer>
        <footer>
            <h2>Оплата: @ViewBag.AdPost.Salary</h2>
        </footer>
        <footer>
            <h2>Пояснення: @ViewBag.AdPost.PostDescription</h2>
        </footer>
        <hr />
        <div class="container">
            <ul class="nav navbar-nav">
                <li><input type="submit" class="btn btn-default" value="Видалити це оголошення" /></li>
            </ul>
        </div>
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a href="~/AdPost/ShowAllPosts?clientid=@ViewBag.ClientId" class="navbar-brand">Назад</a></li>
            </ul>
        </div>
     </div>

</form>
