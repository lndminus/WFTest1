
<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="@ViewBag.Client.Login" name="login" />
    <input type="hidden" value="@ViewBag.Request.RequestId" name="requestid" />
    <div class="container body-content">
        <footer>
            <h1>WorkFinder</h1>
        </footer>
        <footer>
            <h2>@ViewBag.AdPost.PostName</h2>
        </footer>
        <footer>
            <h2>Оплата: @ViewBag.AdPost.Salary</h2>
        </footer>
        <footer>
            <h2>Пояснення: @ViewBag.AdPost.PostDescription</h2>
        </footer>
        <hr />
        <div class="container">
            <ul class="nav navbar-nav">
                <li><input type="submit" class="btn btn-default" value="Підтвердити" /></li>
            </ul>
        </div>
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a href="~/AdPost/ShowAllPosts" class="navbar-brand">Назад</a></li>
            </ul>
        </div>
    </div>

</form>
