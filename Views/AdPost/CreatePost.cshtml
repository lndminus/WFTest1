@{
    ViewData["Title"] = "Оформлення замовлення";
}
<h2>Створення оголошення</h2>

<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="@ViewBag.ClientId" name="BookId" />

    <div class="form-group">
        <label for="PostName" class="col-md-2 control-label">Имя:</label>
        <div class="col-md-4">
            <input type="text" name="PostName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="PostDescription" class="col-md-2 control-label">Пояснення:</label>
        <div class="col-md-4">
            <input type="text" name="PostDescription" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Salary" class="col-md-2 control-label">Оплата роботи:</label>
        <div class="col-md-4">
            <input type="text" name="Salary" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="ContactPhone" class="col-md-2 control-label">Контактний телефон:</label>
        <div class="col-md-4">
            <input type="text" name="ContactPhone" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Створити оголошення"/>
        </div>
    </div>

</form>